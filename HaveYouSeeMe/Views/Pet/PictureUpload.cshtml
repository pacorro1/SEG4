@model HaveYouSeeMe.Models.PictureModel

@{
    ViewBag.Title = "PictureUpload";
}

<h2>PictureUpload</h2>
@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Picture Model</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.PictureFile)
        </div>
        <div class="editor-fielde">
            @Html.TextBoxFor(model => model.PictureFile,
              new { type = "file" })
            @Html.ValidationMessageFor(model => model.PictureFile);
        </div>
        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}
@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval");
}